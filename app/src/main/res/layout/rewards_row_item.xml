<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_rewards_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_adjust_24"
            android:contentDescription="Reward Icon"
            android:scaleType="centerCrop"
            android:background="@drawable/baseline_adjust_24"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/text_reward_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% Off Coupon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_reward_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid for your next purchase"
                android:textSize="14sp"
                android:paddingTop="4dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/button_rewards_item_claim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableRight="@drawable/baseline_adjust_24"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
